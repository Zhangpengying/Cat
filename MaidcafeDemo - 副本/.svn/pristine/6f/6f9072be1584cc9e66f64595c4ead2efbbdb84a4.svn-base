using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class ToStreet : MonoBase
{
    public bool openDoor = false;
    public Player player;
    int ID = 200;
    private Hashtable infor = new Hashtable();
    // Use this for initialization
    void Start()
    {
        EventManager.instance.RegisterReceiver(this);
        //事件信息记录
        infor.Add("obj", gameObject);
        infor.Add("Name", gameObject.name);

        //注册事件
        StaticVar.AddEvents(ID, infor);
    }


    private void Update()
    {
        if (openDoor)
        {
            if (player!=null)
            {
                //if (Input.GetKeyDown(KeyCode.W))
                //{
                //    StaticVar.ToNextSecens("Rest", player);
                //}
                StaticVar.Door(901, player);
            }
           
        }
    }
    
    public override void ReciveMessage(Message msg)
    {
        base.ReciveMessage(msg);
        if (msg.Command == MyMessageType.Event_OpenHomeToStreet)
        {
            openDoor = true;
            player = msg.Content as Player;
            StaticVar.LastGateway = MessageSend.instance.gatewaysCfg[1101].Position;
            StaticVar.NextScene = "CoffeeStore";
        }
        else if (msg.Command == MyMessageType.Event_CloseHomeToStreet)
        {
            openDoor = false;
            StaticVar.NextScene = "";
        }
    }
}
